{
  "builder": "cmake",
  "dependencies_target": [
    "clang",
    "libogg-dev",
    "libvorbis-dev",
    "libopenal-dev",
    "libboost-all-dev",
    "libsdl2-dev",
    "libsdl2-image-dev",
    "libfreetype6-dev",
    "libcurl4-openssl-dev",
    "libglew-dev",
    "libharfbuzz-dev",
    "libfribidi-dev"
  ],
  "build_args": [
    "-DUBUNTU_TOUCH=ON",
    "-DWARNINGS=OFF",
    "-DWERROR=OFF",
    "-DCMAKE_BUILD_TYPE=${BUILD_TYPE}",
    "-DCMAKE_C_COMPILER=clang",
    "-DCMAKE_CXX_COMPILER=clang++"
  ]
}
